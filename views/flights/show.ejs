<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
  </section>

  <div>
    <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
    </a>
  </div>

<section>
  <%# start meals list %>
  <div>Meals:</div>
  <ul>
    <% flight.meals.forEach(addMeal => { %>
      <li><%= newMeal.name %></li>
    <% }) %>
  </ul>
  <%# end meals list %>
</section>

  <%# add to meal form below this comment %>
    <form id="add-to-meals" action="/flights/<%= flight.id %>/meals" method="POST">
<select name="mealsId">
  <% meals.forEach(meal => { %>
    <option value="<%= meal._id %>"><%= meal.name %></option>
  <% }) %>
</select>
    <button type="submit">Add to Meals</button>
</form>


</section>
<h2>Add Tickets</h2>
<form 
  id="add-ticket-form"
  action="/flights/<%= flight._id %>/tickets"
  method="POST">
  
  <form>
  <label for="seat">Seat:</label>
    <input 
    name="seat" 
    id="seat-input" 
    type="text"
    required pattern="[A-F][1-9]\d?" 
    placeholder="Enter seat">

    <label for="price">Price:</label>
    <input 
    name="price" 
    id="content-price" 
    type="number"
    placeholder="Enter ticket price"> 

    <button type ="submit">Add Ticket</button>
  </form>

  <h2>All Tickets:</h2>
  <% if (flight.tickets.length) { %>
    <table id="ticketTable">
      <thead>
        <tr>
          <th>Price</th>
          <th>Seat</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody> 
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST"> 
            <button>X</button>
        </form>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>

</main>
  
